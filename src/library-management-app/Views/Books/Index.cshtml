@model library_management_app.Models.Book[]

@{
    ViewBag.Title = "Books";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-12">
        <table class="table-hover" style="width:100%">
           
            <tr>
                <th>
                   <strong>Title</strong> 
                </th>
                <th>
                    <strong>Description</strong> 
                </th>
                <th>
                    <strong>Favorite</strong>
                </th>
                <th>
                    <strong>Links</strong>
                </th>
            </tr>
                    @foreach (var book in Model)
                    {
                        //TODO css with cards onhover show details and on click take to show page.
                        <tr>
                        <th>
                            @book.Title
                        </th>
                        <th>
                            @book.DescriptionHtml
                        </th>
                        <th>
                            @book.Favorite
                        </th>
                        <th>
                            @Html.ActionLink("View", "Detail", new { id = book.Id })
                        </th>
                           

                        </tr>
                    }
                
                </table>
        </div>
    </div>
