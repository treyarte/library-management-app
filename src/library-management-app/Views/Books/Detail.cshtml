@model library_management_app.Models.Book
@{
    ViewBag.Title = "Detail";
}

<h2>@Model.Title</h2>

<div class="row">
    <div class="col-md-6">
        <div class="">
            <h5><img src="/Images/@Model.CoverImage"</h5>
            <h5><label>Favorite:</label>@(Model.Favorite ? " Yes" : " No")</h5>
            @if (Model.Author.Length > 0)
            {
                <h5><label>Author(s):</label></h5>
                <div>
                    <ul>
                        @foreach (var author in Model.Author)
                        {
                            <li>@author.Name : @author.Role</li>
                        }
                    </ul>
                </div>
            }
        </div>
            <h5><label>Description:</label></h5>
            <div>@Html.Raw(Model.DescriptionHtml)</div>

        </div>
    </div>


